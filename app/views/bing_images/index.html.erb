<p id="notice"><%= notice %></p>

<h1>Bing Images</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bing_images.each do |bing_image| %>
      <tr>
        <td><%= bing_image.link %></td>
        <td><%= link_to 'Show', bing_image %></td>
        <td><%= link_to 'Edit', edit_bing_image_path(bing_image) %></td>
        <td><%= link_to 'Destroy', bing_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

